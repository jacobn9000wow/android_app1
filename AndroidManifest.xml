<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weatherjson"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black" >
        <activity
            android:name="com.example.weatherjson.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.weatherjson.LoginActivity"
            android:label="@string/title_activity_login"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.example.weatherjson.UserActivity"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name="com.example.weatherjson.ShowUserActivity"
            android:label="@string/title_activity_show_user" >
        </activity>
        <activity
            android:name="com.example.weatherjson.RoomActivity"
            android:label="@string/title_activity_room" >
        </activity>
        <activity
            android:name="com.example.weatherjson.ShowRoomActivity"
            android:label="@string/title_activity_show_room" >
        </activity>
        <activity
            android:name="com.example.weatherjson.PostActivity"
            android:label="@string/title_activity_post" >
        </activity>
        <activity
            android:name="com.example.weatherjson.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.weatherjson.NewRoomActivity"
            android:label="@string/title_activity_new_room" >
        </activity>
        <activity
            android:name="com.example.weatherjson.InviteActivity"
            android:label="@string/title_activity_invite" >
        </activity>
        <activity
            android:name="com.example.weatherjson.RedeemInviteActivity"
            android:label="@string/title_activity_redeem_invite" >
        </activity>
    </application>

</manifest>